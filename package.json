{
  "name": "turbo-headless-platform",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "docus/*",
    "packages/*"
  ],
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "packageManager": "yarn@1.22.18",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "turbo": "^1.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "cz-customizable": "^6.9.1",
    "eslint-config-vue3": "*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  }
}
